{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "dashboard.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/api-gateway/dashboard/{everything}",
      "UpstreamHttpMethod": [
        "GET"
      ]
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "Bearer",
      //  "AllowedScopes": []
      //}
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identityserver",
          "Port": 8082
        }
      ],
      "UpstreamPathTemplate": "/api-gateway/identityserver/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST"
      ]
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "Bearer",
      //  "AllowedScopes": []
      //}
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}